{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["./src/screens/*"],
      "@theme/*": ["./src/theme/*"],
      "@theme": ["./src/theme"],
      "@i18n/*": ["./src/i18n/*"],
      "@i18n": ["./src/i18n"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
